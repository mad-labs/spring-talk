<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- bean definitions here -->

    <bean id="simpleDataSource" class="it.madlabs.springtalk.model.data.impl.SimpleDataSourceImpl" />

    <bean id="greetingsRepository" class="it.madlabs.springtalk.model.repositories.impl.GreetingsRepositoryImpl">
        <property name="simpleDataSource" ref="simpleDataSource"/>
    </bean>

    <bean id="personRepository" class="it.madlabs.springtalk.model.repositories.impl.PersonRepositoryImpl">
        <property name="simpleDataSource" ref="simpleDataSource"/>
    </bean>

    <bean id="greetingStyleService" class="it.madlabs.springtalk.business.services.impl.FormalGreetingStyleServiceImpl">
        <property name="greetingsRepository" ref="greetingsRepository"/>
    </bean>


    <bean id="personGreeterService" class="it.madlabs.springtalk.business.services.impl.PersonGreeterServiceImpl">
        <property name="greetingStyleService" ref="greetingStyleService"/>
        <property name="personRepository" ref="personRepository"/>
    </bean>

</beans>